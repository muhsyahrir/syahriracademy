<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id='syahriracademy_exam_view_tree' model='ir.ui.view'>
        <field name='name'>Exam</field>
        <field name='model'>syahriracademy.exam</field>
        <field name='arch' type='xml'>
            <tree>
                <field name='name'/>
                <field name='exam_id'/>
                <field name='student_count'/>
                <field name='invigilator_id'/>
                <field name='exam_date'/>
            </tree>
        </field>
    </record>

    <record id='syahriracademy_exam_view_form' model='ir.ui.view'>
        <field name='name'>Form Exam</field>
        <field name='model'>syahriracademy.exam</field>
        <field name='arch' type='xml'>
            <form>
                <header>
                    <button name="%(syahriracademy.student_acount_action_wizzard)d" type="action" string="Additional Student" class="btn btn-warning"/>
                </header>
                <sheet>
                    <group>
                        <field name='name'/>
                        <field name='exam_id'/>
                        <field name='student_count'/>
                        <field name='invigilator_id'/>
                        <field name='exam_date'/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id='syahriracademy_exam_view_search' model='ir.ui.view'>
        <field name='name'>Search Exam</field>
        <field name='model'>syahriracademy.exam</field>
        <field name='arch' type='xml'>
            <search>
                <field name='name'/>
                <field name='exam_id'/>
                <field name='student_count'/>
                <field name='invigilator_id'/>
                <field name='exam_date'/>
            </search>
        </field>
    </record>

</odoo>